<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:state_pressed="false"
        android:state_focused="false">

        <shape>
            <stroke
                android:width="1.5dp"
                android:color="@color/text_primary_color" />

            <corners
                android:radius="20dp" />

            <padding
                android:bottom="5dp"
                android:top="5dp"
                android:left="15dp"
                android:right="15dp" />

            <solid
                android:color="@android:color/transparent" />

            <size
                android:height="40dp" />
        </shape>
    </item>
</selector>