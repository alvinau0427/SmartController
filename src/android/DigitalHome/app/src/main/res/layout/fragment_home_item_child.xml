<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_home_item_child">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin">

        <RelativeLayout
            android:layout_width="110dp"
            android:layout_height="170dp"
            android:padding="10dp">

            <me.gujun.android.taggroup.TagGroup
                android:id="@+id/tag_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                style="@style/TagGroup"
                app:atg_backgroundColor="@color/cpb_white"
                app:atg_textColor="#1e767a"
                app:atg_borderColor="#1e767a"
                app:atg_borderStrokeWidth="1dp"
                app:atg_checkedBackgroundColor="@color/cpb_white"
                app:atg_checkedTextColor="#1e767a"
                app:atg_checkedBorderColor="#1e767a"
                app:atg_pressedBackgroundColor="@color/cpb_white"
                app:atg_textSize="10sp"
                app:atg_horizontalSpacing="2.5dp" />

            <Switch
                android:id="@+id/sw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" />

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tag_group" />

            <TextView
                android:id="@+id/tvActuatorID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:layout_below="@+id/iv_image"
                android:text="Name"
                android:textSize="15sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>